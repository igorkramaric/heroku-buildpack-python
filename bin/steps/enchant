#!/usr/bin/env bash

echo "-----> Getting enchant"
cd $(mktemp -d)
curl -s -L -o enchant-1.6.0.tar.gz http://www.abisource.com/downloads/enchant/1.6.0/enchant-1.6.0.tar.gz
tar -xvzf enchant-1.6.0.tar.gz

echo "-----> Building enchant"
mkdir /app/enchant
cd enchant-1.6.0
./configure --prefix=/app/enchant --with-aspell-prefix=/app/vendor/aspell
make

echo "-----> Installing enchant"
# install
make install

# add to path
export PATH=$PATH:/app/enchant/bin

echo "-----> Enchant is here:"
which enchant